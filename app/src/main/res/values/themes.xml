<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mdm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- CustomThemes.App.Starting -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/starting_day</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/scaled_app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.Mdm</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- /CustomThemes.App.Starting -->
</resources>